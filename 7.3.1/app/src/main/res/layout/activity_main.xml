<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uppgift731connectionstatus.MainActivity">

    <TextView
        android:id="@+id/text_main_conn_type_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/main_conn_type_desc"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/text_main_conn_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_main_conn_type_desc"
        app:layout_constraintLeft_toRightOf="@+id/text_main_conn_type_desc"
        app:layout_constraintStart_toEndOf="@+id/text_main_conn_type_desc"
        app:layout_constraintTop_toTopOf="@+id/text_main_conn_type_desc"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/text_main_conn_internet_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/main_internetconn_desc"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/text_main_conn_type_desc"
        app:layout_constraintTop_toBottomOf="@+id/text_main_conn_type_desc" />

    <TextView
        android:id="@+id/text_main_conn_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_main_conn_internet_desc"
        app:layout_constraintLeft_toRightOf="@+id/text_main_conn_internet_desc"
        app:layout_constraintStart_toEndOf="@+id/text_main_conn_internet_desc"
        app:layout_constraintTop_toTopOf="@+id/text_main_conn_internet_desc"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
